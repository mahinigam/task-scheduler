{
    // Use the project's virtualenv as the default interpreter for VS Code
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    // Help the language server find imports in the workspace
    "python.analysis.extraPaths": [
        "${workspaceFolder}"
    ],
    // Ensure Pylance analyzes the whole workspace
    "python.analysis.diagnosticMode": "workspace"
}
